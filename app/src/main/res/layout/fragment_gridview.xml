<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/y36"
        android:layout_marginTop="@dimen/x200"
        android:orientation="horizontal"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x290"
            android:src="@mipmap/ic_cancel"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x290"
            android:src="@mipmap/ic_select"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/iv_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x60"
            android:src="@mipmap/icon_share" />

        <ImageView
            android:id="@+id/iv_export"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x60"
            android:src="@mipmap/ic_export" />

        <ImageView
            android:id="@+id/iv_delect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="@dimen/x60"
            android:src="@mipmap/ic_delect" />


    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x25"
        android:src="@mipmap/line" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/x40"
        android:layout_marginStart="@dimen/x40">

        <android.support.v4.widget.SwipeRefreshLayout
            android:id="@+id/refreshView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <GridView
                android:id="@+id/gv_gridView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:scrollbarStyle="insideInset"
                android:scrollbars="vertical">

            </GridView>


            <!--<android.support.v7.widget.RecyclerView-->
            <!--android:id="@+id/rv_recyclerview"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="@dimen/y1070"-->
            <!--android:background="@mipmap/bg_all"-->
            <!--android:paddingEnd="@dimen/x100"-->
            <!--android:paddingStart="@dimen/x100"-->
            <!--android:scrollbars="vertical"-->
            <!--android:scrollbarStyle="outsideInset">-->

            <!--</android.support.v7.widget.RecyclerView>-->

        </android.support.v4.widget.SwipeRefreshLayout>
    </RelativeLayout>
</LinearLayout>